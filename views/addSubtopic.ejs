<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Subtopic</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container">
    <nav class="sidebar">
        <ul>
          <li><a href="/dashboard">Dashboard</a></li>
          <li><a href="/profile">Profile</a></li>
          <li><a href="/logout">Logout</a></li>
          <li><a href="/all-blogs">All Blogs</a></li>
          <li><a href="/add-blog">Add Blog</a></li>
        </ul>
    </nav>

    <main class="content">
      <h1>Add Subtopic for <%= category.charAt(0).toUpperCase() + category.slice(1) %></h1>
      
      <!-- Form for Adding Subtopics -->
      <form action="/add-subtopic/<%= category %>" method="POST">
        <div class="form-group">
          <label for="subtopic">Subtopic</label>
          <input type="text" id="subtopic" name="subtopic" placeholder="Enter subtopic" required>
        </div>
        <button class="submit-btn" type="submit">Add Subtopic</button>
      </form>

      <!-- Display existing subtopics -->
      <h2>Existing Subtopics</h2>
      <ul>
        <% if (subtopics.length > 0) { %>
          <% subtopics.forEach(subtopic => { %>
            <li>
              <%= subtopic.name %> 
              <form action="/edit-subtopic/<%= subtopic._id %>" method="GET" style="display:inline;">
                <button type="submit" class="edit-btn">Edit</button>
              </form>
              <form action="/delete-subtopic/<%= subtopic._id %>" method="POST" style="display:inline;">
                <button type="submit" class="delete-btn">Delete</button>
              </form>
            </li>
          <% }) %>
        <% } else { %>
          <li>No subtopics available. You can add new ones.</li>
        <% } %>
      </ul>
    </main>
  </div>
</body>
</html>
